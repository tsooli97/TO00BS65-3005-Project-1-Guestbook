<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include("partials/navigation_bar.ejs") %>
    <h1>Add New Ajax Message</h1>
        <div class="form-group">
          <label for="name">Name: </label>
          <input class="form-control" id="name" name="name" required minlength="3">
        </div>

        <div class="form-group">
          <label for="country">Country: </label>
          <input class="form-control" id="country" name="country" required minlength="3">
        </div>

        <div class="form-group">
          <label for="message">Message: </label>
          <input class="form-control" id="message" name="message" required minlength="3">
        </div>

        <button class="btn btn-primary" onclick="sendAjaxMessage()">Add Message</button>

        <div class="error-section"></div>

        <div class="ajax-message-section">

        </div>
</body>
<script>
  async function sendAjaxMessage() {
    if (!basicInputValidation()) {
      return;
    }
    const response = await fetch("/ajaxmessage", {
      method: "POST",
      body: JSON.stringify({
        name: document.querySelector("#name").value,
        country: document.querySelector("#country").value,
        message: document.querySelector("#message").value,
      }),
      headers: {
        "Content-Type": "application/json"
      }
    })

    if (response.ok) {
      const data = await response.json();
      console.log(data)
      data.messages.forEach((message) => {
        const ajaxMessage = document.createElement("div");
        ajaxMessage.classList.add("ajax-message-div");
        const ajaxMessageTitle = document.createElement("p");
        const ajaxMessageMessage = document.createElement("p");

        ajaxMessageTitle.textContent = message.name + ", " + message.country;
        ajaxMessageMessage.textContent = message.message;

        ajaxMessage.appendChild(ajaxMessageTitle);
        ajaxMessage.appendChild(ajaxMessageMessage);

        document.querySelector(".ajax-message-section").appendChild(ajaxMessage);
      })   
    }
    document.querySelector("#name").value = "";
    document.querySelector("#country").value = "";
    document.querySelector("#message").value = "";
  }

  function basicInputValidation() {
    const name = document.querySelector("#name");
    const country = document.querySelector("#country");
    const message = document.querySelector("#message");

    if (name.value.trim() && name.value.length >= 3 && name.value.length < 50) {
      if (country.value.trim() && country.value.length >= 3 && country.value.length < 50) {
        if (message.value.trim() && message.value.length >= 3 && message.value.length <= 100) {
          return true;
        }
      }
    }
    showError();
    return false;
  }

  function showError() {
    document.querySelector(".error-section").textContent = "Check your inputs! No field should be empty, name and country fields should be between 3 and 50 characters, and the message field should be between 1 and 100 characters.";
    setTimeout(() => {
      document.querySelector(".error-section").textContent = "";
    },10000)
  }
</script>
</html>